body {
    font-family: Arial, sans-serif;
    background-color: #f4f6f8;
    padding: 20px;
}

h1 {
    color: #2c3e50;
}

h2 {
    color: #34495e;
}

form {
    background-color: white;
    padding: 15px;
    width: 300px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

label {
    font-weight: bold;
}

input {
    width: 100%;
    padding: 5px;
}

button {
    background-color: #3498db;
    color: white;
    border: none;
    padding: 8px;
    width: 100%;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #2980b9;
}

#resultado {
    margin-top: 15px;
    font-weight: bold;
}
